@model IEnumerable<Insightly.Models.Article>

@{
    ViewData["Title"] = "Browse Articles";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="bi bi-journal-text me-2"></i>Browse All Articles
            </h2>
            <p class="text-muted mb-4">Discover and read articles from our community</p>
        </div>
    </div>

    <div class="row g-4" id="articlesContainer">
        @if (Model != null && Model.Any())
        {
            @foreach (var article in Model)
            {
                <div class="col-md-4 col-lg-3 article-item" 
                     data-title="@article.Title.ToLower()" 
                     data-content="@article.Content.ToLower()" 
                     data-author="@article.Author.Name.ToLower()">
                    <div class="card h-100 card-hover clickable-card" data-article-url="@Url.Action("Details", "Articles", new { id = article.ArticleId })">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@article.Title</h5>
                            <p class="card-text text-muted ellipsis">
                                @article.Content.Substring(0, Math.Min(100, article.Content.Length))...
                            </p>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="badge bg-secondary">
                                    @article.Author.Name
                                </span>
                                <a href="@Url.Action("Details", "Articles", new { id = article.ArticleId })" 
                                   class="btn btn-sm btn-outline-primary read-more-btn">Read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-journal-text display-1 text-muted mb-3"></i>
                    <h4>No articles available</h4>
                    <p class="text-muted">No articles have been published yet.</p>
                    <a href="@Url.Action("Create", "Articles")" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Create First Article
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- No Results Message for Search -->
    <div id="noResultsMessage" class="text-center py-5" style="display: none;">
        <i class="bi bi-search display-1 text-muted mb-3"></i>
        <h4>No articles found</h4>
        <p class="text-muted">Try adjusting your search terms</p>
    </div>
</div>
